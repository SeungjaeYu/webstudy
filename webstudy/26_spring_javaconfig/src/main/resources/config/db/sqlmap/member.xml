<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.db.repository.mapper.MemberMapper">

    <select id="selectMemberById" parameterType="string" resultType="member">
        select *
          from tb_mybatis_member 
         where id = #{value}
    </select>
    
    <select id="selectMember" resultType="member">
        select id,
               name,
               email,
               addr
          from tb_mybatis_member 
    </select>
    
    <insert id="insertMember" parameterType="member">
        insert into tb_mybatis_member (
            id, 
            name, 
            addr, 
            email
        ) values (
            #{id}, 
            #{name}, 
            #{addr}, 
            #{email}
        )
    </insert>
    
    <update id="updateMember" parameterType="member">
        update tb_mybatis_member
           set addr = #{addr}
         where id1   = #{id}
    </update>
    
    <update id="deleteMember" parameterType="string">
        delete tb_mybatis_member
         where id = #{id}  
    </update>
    
</mapper>




