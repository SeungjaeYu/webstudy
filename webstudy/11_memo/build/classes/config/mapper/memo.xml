<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 독타입.. 중복이여서는 안된다 -->
<!--파일을 고유하게 이름짓는 것 namespace testMapper1의 이름을 줘야한다 패키지명 같이 줘야한다  -->
<!-- dao 클래스 위치 ctrl 키 눌러서 경로 확인되는지 .. check-->
<mapper namespace="kr.co.mlec.repository.dao.MemoDAO">  
     <!-- regDate는 못갖고오니까 리절트맵 만들어주기 -->
   
     
     <!-- 게시판 전체 -->
     <select id="selectMemo" resultType="Memo" flushCache="true" useCache="true">
      	     select * 
			   from  tb_memo 
			  order by  no desc
     </select>
     

     <!-- 글쓰기 -->
     <select id="insertMemo" parameterType="string">
        insert into tb_memo( no, content  ) 
					values(no_seq.nextval, #{content} )
	 </select>
           
           
      <!-- 글삭제 -->     
     <select id="deleteMemo" parameterType="int">
       delete
         from tb_memo
        where no = #{no}      
	 </select>
	 
      <!-- 글전체삭제 -->     
     <select id="deleteAllMemo">
       delete
         from tb_memo
	 </select>
    
</mapper>	














